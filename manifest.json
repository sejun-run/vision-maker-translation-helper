{
  "manifest_version": 3,
  "name": "비전메이커 번역 도우미",
  "version": "1.0",
  "description": "월드비전 비전메이커 번역봉사단의 편지 번역을 돕는 도구",
  "permissions": [
    "scripting",
    "activeTab",
    "tabs"
  ],
  "host_permissions": [
    "https://letter.worldvision.or.kr/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://letter.worldvision.or.kr/*"],
      "js": [
        "config.js",
        "utils.js", 
        "letter-templates.js",
        "ui-components.js",
        "auto-rating.js",
        "popup-to-tab.js", 
        "content.js"
      ],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["VM_logo.png"],
      "matches": ["https://letter.worldvision.or.kr/*"]
    }
  ],
  "action": {
    "default_title": "비전메이커 번역 도우미",
    "default_icon": {
      "16": "VM_logo.png",
      "32": "VM_logo.png",
      "48": "VM_logo.png",
      "128": "VM_logo.png"
    }
  },
  "icons": {
    "16": "VM_logo.png",
    "32": "VM_logo.png",
    "48": "VM_logo.png",
    "128": "VM_logo.png"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+V",
        "mac": "Command+Shift+V"
      },
      "description": "비전메이커 번역 도우미 실행"
    }
  }
}
